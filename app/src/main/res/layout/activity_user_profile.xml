<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/user_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="30dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_recommend_filled_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hear_filled"
                android:background="#00000000"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"/>

            <ImageButton
                android:id="@+id/user_recommend_empty_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/heart_empty"
                android:background="#00000000"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="추천수 : "/>

            <TextView
                android:id="@+id/user_recommend_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="관심 태그"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_profile_recyclerview"
            android:background="@drawable/black_edittext"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:paddingTop="8dp"
            android:minHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/tag_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#70000000"
            android:layout_marginTop="30dp"
            android:layout_above="@id/tag_setting_button"/>

        <Button
            android:id="@+id/tag_setting_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="관심 태그 설정"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:background="#00000000"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignRight="@id/tag_setting_button"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:scaleType="centerInside"
            android:padding="5dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#70000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/exchange_list_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="거래내역"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:background="#00000000"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignRight="@id/exchange_list_button"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:scaleType="centerInside"
            android:padding="5dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#70000000"
        android:layout_marginBottom="40dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
